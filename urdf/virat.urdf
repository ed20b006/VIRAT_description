<?xml version="1.0"?>
<robot name="origins">

	<link name="base_link">
		<visual>
			<geometry>
				<mesh filename="package://virat_description/meshes/body/bot2.dae" />
			</geometry>
		</visual>
	</link>

	<link name="right_wheel">
		<visual>
			<geometry>
				<mesh filename="package://virat_description/meshes/wheels/tyre1.dae" />
