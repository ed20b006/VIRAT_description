		<parent link="base_link" />
		<child link="left_wheel" />
		<origin xyz="0 0.323 0" />
	</joint>

	<link name="front_castor">
		<visual>
			<geometry>
				<mesh filename="package://virat_description/meshes/wheels/castors1.dae" />
			</geometry>
		</visual>
	</link>

	<joint name="castor_joint" type="fixed">
